import streamlit as st
import pandas as pd
import plotly.express as px

# Judul Dashboard
st.title("ðŸ“Š Dashboard Kepuasan Siswa")

# Upload file Excel
uploaded_file = st.file_uploader("Upload file Excel (.xlsx)", type=["xlsx"])

if uploaded_file is not None:
    # Baca data Excel
    df = pd.read_excel(uploaded_file)
    
    # Tampilkan preview data
    st.subheader("ðŸ“„ Data Preview")
    st.dataframe(df)
    
    # Pilih kolom untuk dianalisis
    kolom = st.selectbox("Pilih Kolom Kepuasan:", df.columns)
    
    # Hitung rata-rata
    rata_rata = df[kolom].mean()
    st.metric("Rata-rata Kepuasan", round(rata_rata, 2))
    
    # Buat grafik distribusi
    st.subheader("ðŸ“Š Grafik Distribusi")
    fig = px.histogram(df, x=kolom, title=f"Distribusi Nilai '{â€¦
